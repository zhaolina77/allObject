@import '/css/aui.wxss';
@import '/css/common.wxss';
@import '/css/global.wxss';

page {
    background-color: #f5f6fa !important;
}

.aui-bg-white {
    border-radius: 4rpx;
    overflow: hidden;
    position: relative;
}

.time {
    display: inline-block;
    height: 48rpx;
    line-height:48rpx;
    padding: 0 30rpx;
    border-radius:40rpx;
    background-color: #c2c4c6;
}

.pic {
    height: 360rpx;
    overflow: hidden;
}

.pic image {
    width: 100%;
    height: 100%;
    object-fit: inherit;
}

.line {
    width: 24rpx;
    height:  24rpx;
    background-color: #f44;
    border-radius: 50%;
    position: absolute;
    bottom: 35rpx;
    right:60rpx;
}

.xq {
    line-height: 22px;
}
