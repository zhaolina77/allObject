.table {
    border-radius: 10rpx;
}

.table li:nth-of-type(2n) {
    border-right: none !important;
}

.table li:nth-of-type(1n+3) {
    border-bottom: none !important;
}

.table .pic {
    width: 90%;
    height:130rpx;
    border-radius: 10rpx;
    margin-right: 10%;
    overflow: hidden;
}

.table .pic image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

