/* pages/index/search/index.wxss *//* pages/index/index/index.wxss */
@import '/pages/aui.wxss';
@import '/pages/common.wxss';
page {
  background: #f5f5f5;
}
.search {
  background: #fff;
  display: flex;
  margin: 12px;
  padding: 8px;
  border-radius: 3px
}
.searchtext {

  font-size: 15px;
  color: #bfbebe;
  position: relative;
  top: 0;
}
input.input {
  width: 40%;
  height: 40rpx;
  text-align: left;
  padding-left: 10rpx;
}
.banner {
  width: 100%;
}
swiper {
  height: 180px;
  width: 100%;
}
.youhuiquan {
  height: 90px;
  width: 100%;
  margin-top: 10px
}
.youhuiquan image {
  height: 90px;
  width:100%;

}
.title {
  font-size: 17px;
  color: #010101;
  text-align: center;
  margin: 10px;
  display: block
}
.pwrap {
  display: flex;
  padding: 12px;
  justify-content: space-between;
  flex-wrap: wrap;
}
.plist {
  background: #fff;
  width: 48%;
  border-radius: 3px;
  padding-bottom: 10px;
  margin-bottom: 20rpx;
}
.imgwrap {
  padding: 30px 0 0;
  text-align: center
}
.plist image {
  width: 120px;
  height: 120px;
}
.price {
  color: #ff2c2c;
   padding:10px 0 0 5px;
}
.name {
  border-top: 1px solid #eeeeee;
  display: block;
  padding:8px 0 0 5px;
  margin-top: 5px;
}