/* pages/cart/buy/index.wxss */
@import'/pages/aui.wxss';
@import'/pages/common.wxss';
page {
  background: #f5f5f5;
}
.toright {
width: 13rpx;
height: 22rpx;
}
.img {
  width: 150rpx;
  height: 150rpx;
}
.address {
  width: 59rpx;
  height: 59rpx;
}
.aborder {
  height: 8rpx;
  width: 100%;
  background: #fff;
}
.fiexheight {

  width:100%;
  background: #fff;
  height: 100rpx;
  color: #fff;
  display: block;
}
.fixed {
  position: fixed;
  bottom: 0;
  width:100%;
  background: #fff;
  height: 100rpx;
  border-top: 1rpx solid #eee;
}
.fixed image {

    width: 40rpx;
    height:40rpx;
}
.tobuy {
  background: linear-gradient(to right,#ffa243,#ff502e);
  height: 100rpx;
  line-height: 100rpx;
}
.server {
  
  border-top-left-radius: 50rpx;
  border-top-right-radius: 50rpx;
  position: relative;
}
.server .flex,.spec .flex {
  align-items: flex-start;
  margin-top: 60rpx;
}
.server image,.spec image {

  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.list {
  
  display: flex;
  align-items: center;


}
.tag,.price,.text {
  color: #ff6433;
}
.left {
  flex:1;
  padding: 5px;
  border: 1px solid #ff6433;
  border-radius: 3px;
  height: 66px;
}
.right {

  color: #ff6433;
background: #f6e1da;
border: 1px solid #ff6433;
height: 66px;
align-self: center;
display: flex;
justify-content: center;
flex-direction: column;
border-radius: 3px;
margin-left:-1px;
padding: 5px;

}
.price {
  font-size: 48rpx;
}
.close {
  position: absolute;
  right: 15rpx;
  top:30rpx;
}
