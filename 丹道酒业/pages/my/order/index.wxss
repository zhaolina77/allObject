/* pages/my/order/index.wxss */
@import '/pages/aui.wxss';
@import '/pages/common.wxss';
page {
  background: #f5f5f5;
}
.title {
  justify-content: space-between;
  padding: 30rpx;
  background: #fff;
  border-top: 2rpx solid #ddd;
}
.item {
  position: relative;
  font-size: 30rpx;
  color: #333;
}
.aui-badge {
width: auto;
text-align: center;
min-width: 15rpx;
height: 28rpx;
line-height: 28rpx;
padding: 0 8rpx;
font-size: 22rpx;
color: #ffffff;
background-color: #ff2600;
border-radius: 100%;
position: absolute;
top: 0;
left: 100%;
z-index: 99;

}
.active {
  color: #ff2c2c;
}
.active:after {
  width: 100%;
  position: absolute;
  height: 2px;
  background: #ff2c2c;
  content: '';
  left: 0;
  bottom: -5px;
}
.line {
  width: 100%;
  height: 2rpx;
  background: #eee;
  margin-top: 30rpx;
}
.payname {
  font-size: 26rpx;
  color: #ff2c2c;
}
.paynames {
  font-size: 26rpx;
  color: #999999;
}

.pimg {
  width: 130rpx;
  height: 130rpx;
  background: #ededed;
  border-radius: 8rpx;
  padding: 24rpx;
}
.opt {
  font-size: 28rpx;
  color: #666666;
  border: 2rpx solid #cccccc;
  border-radius: 8rpx;
  margin-top:30rpx;
  width: 160rpx;
  line-height: 70rpx !important;
  display: inline-block;
  text-align: center;
  margin-left: 20rpx;
  background: none !important;
  height: 70rpx !important;
  vertical-align:baseline
}
.red {
  color: #ff2c2c;
  border: 2rpx solid #ff2c2c;
}

