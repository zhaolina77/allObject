/* pages/my/index/index.wxss */
@import '/pages/aui.wxss';
@import '/pages/common.wxss';
page {
  background: #f5f5f5;
  overflow-x: hidden;
}
.info {
  position: absolute;
  width: 50%;
  top: 60rpx;
  left:30rpx;

}
.touxiang {

  width: 120rpx;
  height:120rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.mtag {

  font-size: 26rpx;
  color: #8d5f33;
  background: linear-gradient(to right,#e6bd94,#c38851);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
}
.toright {
  width: 13rpx;
  height: 22rpx;
}
.orderlist {
  justify-content: space-between;
}
.aui-line {
  width: 100%;
  height: 2rpx;
  background: #eee;
  margin-top: 30rpx;
}
image.ordericon {
  width: 44rpx;
  height: 44rpx;
}
.order {
  position: relative;
  bottom: 100rpx;
  border-radius: 10rpx;

}
.orderlist {
  margin-top: 30rpx;

}
.orderlist text {
  display: block;
}
.orderlist view {
  position: relative;
}
.orderlist .aud {
  position: absolute;
  top: 0;
  right: 16%;
  color: #fff;
  background: #ff2c2c;
  border-radius: 100%;
  font-size: 17rpx;
width: 20rpx;
height: 20rpx;
}
.icon {

  width: 26rpx;
  height: 24rpx;
  margin-right: 20rpx;
}
.yellow {

  color: #ff6433;
  margin-right: 10rpx;
}
.wrap {
  position: relative;
bottom: 90rpx;

}