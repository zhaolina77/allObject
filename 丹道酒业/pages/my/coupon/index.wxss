/* pages/index/coupon/index.wxss */
@import '/pages/aui.wxss';
@import '/pages/common.wxss';
page {
  background: #f5f5f5;
}
.tab {
  background: #fff;
  padding: 30rpx;
  justify-content: space-between;
  font-size: 30rpx;
}
.tab view {
  position: relative;
}
.tab .active {

  color: #ff2c2c;
}
.tab .active::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 1px;
  background: #ff2c2c;
  left: 4rpx;
  bottom: -8rpx;
}
.list {
  
  display: flex;
  align-items: center;


}
.tag,.price,.text {
  color: #ff6433;
}
.left {
  flex:1;
  padding: 5px;
  border: 1px solid #ff6433;
  border-radius: 3px;
  height: 75px;
}
.right {

  color: #ff6433;
background: #f6e1da;
border: 1px solid #ff6433;
height: 66px;
align-self: center;
display: flex;
justify-content: center;
flex-direction: column;
border-radius: 3px;
margin-left:-1px;
padding: 10px;

}
.price {
  font-size: 48rpx;
}