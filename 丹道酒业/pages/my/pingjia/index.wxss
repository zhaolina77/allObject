/* pages/my/wallet/index.wxss */
@import '/pages/aui.wxss';
@import '/pages/common.wxss';
page {
 background: #f5f5f5;
}
.title {
  margin-top: 2rpx;
}
.title text {
  width: 50%;
  position: relative;
}
.title text.active{
  color: #ff6433;
}
.title text.active::after {
  content: '';
  position: absolute;
  width: 100%;
  height: 1px;
  background: #ff6433;
  left: 4rpx;
  bottom: -30rpx;
}
.list {
  align-items: flex-start
}
image.pic {
   width: 110rpx;
  height: 110rpx;
  background: #ededed;
  border-radius: 8rpx;
  padding: 24rpx;
}
.opt {
  font-size: 28rpx;
  color: #666666;
  border: 2rpx solid #cccccc;
  border-radius: 8rpx;
  margin-top:30rpx;
  width: 160rpx;
  line-height: 70rpx;
  display: inline-block;
  text-align: center;
  margin-left: 20rpx;
}
.line {
  width: 100%;
  height: 2rpx;
  background: #eee;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
