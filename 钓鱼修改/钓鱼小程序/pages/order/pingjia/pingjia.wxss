@import '/css/aui.wxss';
@import '/css/common.wxss';
@import '/css/global.wxss';

page {
  background: #f6f6f6;
}

.pingfen {
  padding: 1.25rem 0;
}

.aui-col-5 {
  width: 100%;
  text-align: center;
}

.aui-col-5 image {
  width: 1.1rem;
  margin-left: 20rpx;
}

.on div {
  color: #FE7331 !important;
}

textarea {
  height: 7rem;
}

.pic {
  width: 4.5rem;
  height: 4.5rem;
  margin-right: .5rem;
  position: relative;
}

.pic image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.add {
  margin-right: .5rem;
}

.add image {
  width: 4.5rem;
  height: 4.5rem;
}


.close {
  width: 1rem !important;
  height: 1rem !important;
  position: absolute;
  top: 0.2rem;
  right: 0.2rem
}

input::-webkit-input-placeholder {
  color: #ccc;
  font-size: 0.7rem;
}

input:-moz-placeholder {
  color: #ccc;
  font-size: 0.7rem;
}

input::-moz-placeholder {
  color: #ccc;
  font-size: 0.7rem;
}

input:-ms-input-placeholder {
  color: #ccc;
  font-size: 0.7rem;
}

.star1 {
  width: 34rpx;
  height: 34rpx;
}

.aui-col-xs-4 {
  width: 4.2rem;
  height: 4.2rem;
  overflow: hidden;
}

.aui-col-xs-4:last-child {
  margin-right: 0 !important;
}

.aui-col-xs-4 img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.guanbi {
  position: absolute;
  height: .8rem;
  width: .8rem;
  top: 2px;
  right: 5px;
}

.guanbi img {
  width: 100%;
  height: 100%;
}