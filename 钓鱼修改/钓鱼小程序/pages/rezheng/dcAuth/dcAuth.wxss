@import '../../../css/aui.wxss';
@import '../../../css/common.wxss';
@import '../../../css/global.wxss';

.aui-list .aui-list-item-right, .aui-list-item-title-row em{max-width: inherit !important;}
input{text-align: right;color: #121D36;}
.aui-input, input[type="text"], input[type="password"], input[type="search"], input[type="email"], input[type="tel"], input[type="url"], input[type="date"], input[type="datetime-local"], input[type="time"], input[type="number"], select, textarea {font-size: 28rpx;}
.pic{width: 180rpx;height:4.5rem;margin-right: 20rpx;position: relative;}
.pic image{width: 100%;height: 100%;object-fit: cover;}
.add{margin-right: 20rpx;}
.add image{width:180rpx;height:180rpx;}
.close{width: 40rpx !important;height: 40rpx !important; position: absolute;top: 8rpx;right: 8rpx}


.aui-pull-left{margin-right: 24rpc;position: relative;}
.pics{position: relative; width:188rpx;height:188rpx;border-radius: 10rpx;overflow: hidden;}
.pics .tu{width: 100%;height: 100%;object-fit: cover;}
.guanbi{position: absolute;right: 10rpx;top:10rpx;width: 24rpx;}



.shangs{
  width: 100%;
  height: 100%;
  background-color: rgba(1, 1, 1, 0.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
}
.box{
  width: 100%;
  overflow: hidden;
  background-color: white;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1;
}
.box image{
  width: 50rpx;
  height: 50rpx;
  float: right;
margin: 30rpx;
}
.lbox{
  width: 90%;
  display:flex;
  justify-content: space-between;
  flex-wrap: wrap; 
  margin: 0 5%;
}
.text{
  width: 48%;
  height: 80rpx;
  border: 1px solid lightgray;
  border-radius:20rpx; 
  text-align: center;
  line-height: 80rpx;
  margin:20rpx 0;
  color: #999;
}
.active{
  color: white;
  background-color: lightseagreen;
}