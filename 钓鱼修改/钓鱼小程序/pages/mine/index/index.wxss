@import '/css/aui.wxss';
@import '/css/common.wxss';
@import '/css/global.wxss';

page {
    background-color: #f5f6fa !important;
}

.top-pic {
    height: 280rpx;
    overflow: hidden;
    position: relative;
    width: 100%;
    top: 0;
    left: 0;
}

.top-pic image {
    width: 100%;
    height: 100% !important;
    position: absolute;
    top: -50rpx;
}
.top {
     margin:-150rpx 30rpx 0 30rpx;
    border-radius: 10rpx;
    overflow: hidden;
}
.info .aui-list-item-media {
    width: auto !important;
}
.head-pic {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
}

.head-pic image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.aui-label {
    border-radius: 40rpx;
    padding: 10rpx 20rpx !important;
}

.zhuangtai image {
    width: 48rpx;
    margin: auto;
}

.list .fl {
    width: 35rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.list .jt {
    width: 30rpx;
    vertical-align: middle;
}

.list text {
    vertical-align: middle;
}

.list .aui-list-item-inner {
    min-height: 110rpx;
}
