/* pages/evaluat/evaluat.wxss */
@import '/css/aui.wxss';
@import '/css/common.wxss';
.aui-img-round {

  width: 70rpx;
  height: 70rpx;
  border-radius: 100%;
}
.star{ display: flex;justify-content: flex-start;align-items: center;}
			.star image{ width: 1.25rem;height: 1.25rem;margin-right: 0.3rem;}
			.tag{ padding: 0 2.25rem;display: flex;justify-content:center;flex-wrap: wrap;}
			.tag text{ display: inline-block;background-color: #f6f6f6;color: #000;padding: 0.3rem 0.5rem;border-radius: 3px;font-size: 0.65rem;margin-bottom: 0.5rem;
				margin-right: 0.5rem;
			}
			.active{ background-color: #ffedd2 !important;color: #fe4501 !important;}
			textarea{ background-color: #f5f5f5;height: 6rem;border-radius: 5px;padding: 0.5rem 0 0 0.5rem;}
      .aui-col-xs-4{ margin:0 0 0.25rem 0;width: 4.5rem;height: 4.5rem;margin-right: 20rpx}
      .aui-col-xs-4:nth-of-type(3n){ margin-right: 0 !important}
      .aui-col-xs-4 image{ width: 4.5rem;height: 4.5rem;object-fit: cover;}
      .close {
        width: 40rpx !important;
        height: 40rpx !important;
        position: absolute;
        right: 0;
        top:0;
      }
      .submit {
        background: #FE4502;
        color: #fff;
        text-align: center;
        line-height: 80rpx;
        border-radius: 80rpx;
      }