/* 滑动*/
.mine-bar{
    position: fixed;
    top:0;
    left: 0;
    height: 90rpx;
    z-index: 9;
    width: 100%;
}
.mine-bar scroll-view{
    height:90rpx;
    line-height: 90rpx;
    white-space:nowrap;
    width:100%;
    display: flex;  
}
.mine-bar scroll-view .swiper-slide{
    padding: 0 30rpx;
    color: #fff;
}
.mine-bar scroll-view .swiper-slide:last-child{
    margin-right:120rpx;
}
.mine-bar scroll-view .swiper-slide.on{
    background-color: #fff;
    border-radius: 8rpx 8rpx 0 0 ;
}
.mine-bar scroll-view .swiper-slide.on text{
    color: #222 !important;
    font-weight: 500;
}

