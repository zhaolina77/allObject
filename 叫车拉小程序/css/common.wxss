/**AUI重写css**/
.aui-bar-light {color: #4A4A4A;}

/*分类*/
.aui-list-view {position: relative;padding-left: 0;margin-top: 0;margin-bottom: 15px;list-style: none;}
.aui-list-view:after {
	display: block;
	content: '';
	position: absolute;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
	-webkit-transform-origin: 0 0;
	-webkit-transform: scale(1);
	pointer-events: none;
}
.aui-list-view-cell {position: relative;padding:14px 10px; text-align:center;overflow: hidden;-webkit-transform-style: preserve-3d;transform-style: preserve-3d;-webkit-touch-callout: none;border-left:2px solid transparent;}
.aui-list-view-cell.aui-active{color: #00a0ba; border-left:2px solid #00a0ba}
.aui-list-view-cell-block{position: relative;padding:10px 10px 10px 1.5rem; text-align:left;overflow: hidden;}
.aui-list-view-cell-block.aui-active{ background: #fff;color: #E51C23;}


