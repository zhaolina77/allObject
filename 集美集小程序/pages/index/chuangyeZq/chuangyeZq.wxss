.aui-bar image{
    width: 32rpx;
    vertical-align:middle;
}
.aui-title{
    right:30rpx !important;
    display: flex;
    align-items: center;
    left:30rpx !important;
}
.aui-bar{
    height:100rpx;
}
.serch{
    border-radius: 10rpx;
    width: 100%;
}
.serch input{
    float: left;
    line-height:70rpx !important;
    height: 70rpx;
    width: 80%;
    color: #222;
    font-size: 14px;
}
scroll-view{
    white-space:nowrap;
    width:100%;
    display: flex;  
    height:90rpx;
    line-height: 60rpx;
}
scroll-view .swiper-slide{
    margin-left:30rpx;
    margin-right:30rpx ;
}
scroll-view .swiper-slide:last-child{
    margin-right:120rpx;
}
scroll-view .swiper-slide .txt{color: #999;}
scroll-view .on .txt{color: #222 !important;font-weight: 500;}
scroll-view .on .line{width: 22rpx;height: 6rpx;background-color: #ff4805;margin: 0 auto;border-radius: 3rpx;}

