@import'/css/aui.wxss';
@import'/css/common.wxss';
@import'/css/global.wxss';
.inner{position: fixed;top:0;left: 0;width: 100%;height: 100%;z-index: 9;}
.left{background-color: #F6F6F6;width:24%;height: 100%;position: absolute;left:0;top:1rpx;overflow-y: scroll;padding-bottom: 120rpx;z-index: 99;}
.left_txt{width: 100%;height: 100rpx;font-size: 28rpx;line-height: 100rpx;position: relative;z-index: 999;}
.left_active::before{content: '';position: absolute;left: 0;top: 50%;margin-top:-20rpx;width: 6rpx;height: 40rpx;background-color: #ff4805;}
/* .left_active::before{border-left: 7rpx solid #FF4805;} */
.left_active{background-color: #fff;font-weight: 500;color:#FF4805;}
.right{width:76%;position: absolute;left: 24%;top: 0;height: 100%;overflow-y: scroll;padding-bottom: 120rpx;z-index: 99;}
.shop_list .right .aui-col-xs-6 .pic{width: 100%;height: 240rpx;}
.shop_list .right .aui-col-xs-6 .pic image{width: 100%;height: 100%;}