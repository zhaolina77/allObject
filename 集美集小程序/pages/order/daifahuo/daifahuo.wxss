page {
    background-color: #f5f6fa;
}

.aui-list-item-right {
    display: flex;
    align-items: center;
}

.aui-list-item-media {
    width: 190rpx !important;
    height:200rpx;
    overflow: hidden;
}

.aui-list-item-media image {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.aui-ellipsis-2 {
    height: 44rpx;
}
.aui-list-item-media image{border-radius: 10rpx;}

/* 拼团 */
.tuan_box{justify-content: flex-start;}
.head_pic{width: 50rpx;height: 50rpx;border-radius: 50%;overflow: hidden;border: 1rpx solid #fff;margin-left: -15rpx;}
.head_pic image{width: 100%;height: 100%;}
.head_pic:nth-child(1){margin-left: 0rpx;}
