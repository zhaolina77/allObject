@import '/css/aui.wxss';
@import '/css/common.wxss';
@import '/css/global.wxss';
page{background-color: #F5F5F5;}
.flex{display: flex;justify-content: space-between;}

textarea {
  height:300rpx;
}
.aui-col-xs-4{ width: 32%;
  height: 220rpx;
  position: relative;
  overflow: hidden;
margin-right: 2%;
}
.aui-col-xs-4:nth-of-type(3n){margin-right: 0 !important;}
.aui-col-xs-4 image{
  width:100%;
  height: 100%;
}
.close {
  width: 40rpx !important;
  height: 40rpx !important;
  position: absolute;
  top: 0rpx;
  right:0rpx;
}
.pic {
  border-radius:6rpx;
}
.btn_box{background-color: #F5F5F5 !important;color: #999;}
.st{width: 70%;margin:0 auto}
.star_box{width: 60rpx;}
.star_box image{width: 48rpx;height:48rpx;margin: 0 auto;}
.active{color: #ff4805 !important;}



