@import'/css/aui.wxss';
@import'/css/common.wxss';
@import'/css/global.wxss';
page{background-color: #f5f5f5;}
scroll-view{
    white-space:nowrap;
    width:100%;
    display: flex;  
    height:90rpx;
    line-height: 60rpx;
}
scroll-view .swiper-slide{
    margin-left:30rpx;
    margin-right:30rpx ;
}
scroll-view .swiper-slide:last-child{
    margin-right:120rpx;
}
scroll-view .swiper-slide .txt{color: #999;}
scroll-view .on .txt{color: #222 !important;font-weight: 500;}
scroll-view .on .line{width: 22rpx;height: 6rpx;background-color: #ff4805;margin: 0 auto;border-radius: 3rpx;}

/* 导航 */
.classfy{justify-content: flex-end;color: #666;font-size: 26rpx;}
.cl_active{color: #ff4805;}
.jt image{width: 14rpx;height:23rpx;}
.shop_list .aui-col-xs-6 .pic{position: relative;}
.up{width: 100%;height: 52rpx;background-color: rgba(255, 72, 5, 0.7);color: #fff;position: absolute;bottom: 0;line-height: 50rpx;} 
.shop_list .flex{justify-content: flex-start;}