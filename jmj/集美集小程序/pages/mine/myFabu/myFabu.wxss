/* 服务 */
.lay{
    position: fixed;
    top: 0;
    left:0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 999;
}
.lay .aui-content{
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 30rpx 0 70rpx;

    text-align: center;
    color: #666666;
}
.lay .aui-content .sc{
    width:35rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}	


.sp{width: 440rpx;height: 440rpx;position: relative;border-radius: 10rpx;overflow: hidden;}
.sp image{width: 100%;height: 100%;}
